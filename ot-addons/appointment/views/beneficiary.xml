<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_beneficiary_form" model="ir.ui.view">
        <field name="name">appointment.beneficiary.form</field>
        <field name="model">sanabel.beneficiary</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="number_of_children"/>
                </group>
                <group>
                    <field name="region_id"/>
                    <field name="phone_number"/>
                    <field name="nationality"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_beneficiary_view" model="ir.ui.view">
        <field name="name">appointment.beneficiary.view</field>
        <field name="model">sanabel.beneficiary</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="number_of_children"/>
                <field name="region_id"/>
                <field name="phone_number"/>
                <field name="nationality"/>
            </tree>
        </field>
    </record>

    <record id="action_appointment_beneficiaries" model="ir.actions.act_window">
        <field name="name">Beneficiaries</field>
        <field name="res_model">sanabel.beneficiary</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>